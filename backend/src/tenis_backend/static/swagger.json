{
  "openapi": "3.0.0",
  "info": {
    "description": "Tenis",
    "version": "1.0.0",
    "title": "Ivinco Tenis API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths":{
    "/auth":{
      "post":{
        "summary": "Auth - Get Token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get Token for user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth"
                }
              }
            }
          }          
        }
      }
    },
    "/ack": {
      "post":{
        "summary": "Alert - Method to set or unset responsible User for alerts",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "properties": {
                  "ack": [
                    {
                        "alertId": "string"
                    }
                ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Should return OK if everything is fine",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "auth": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "ack": {
        "type": "object",
        "properties": {
          "ack": [
            {
              "alertId": "string"
            }
          ]
        }
      }
    }
  },
  "tags": [
    {
      "name": "Tenis API",
      "description": "Example of API for Tenis"
    }
  ]  
}    