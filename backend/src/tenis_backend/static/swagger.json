      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths":{
    "/auth":{
      "post":{
        "summary": "Auth - Authenticate, get two tokens",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get Token for user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth"
                }
              }
            }
          }          
        }
      }
    },
    "/ack": {
      "post":{
        "security": [
          {
          "bearerAuth": []
          }
        ],
        "summary": "Alert - Method to set or unset responsibleUser for alerts",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "unack": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "alertId": {
                          "type": "string"
                        }
                      },
                      "required": ["alertId"]
                    }
                  }
                },
                  "required": ["unack"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Always return OK if alertID exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ack"
                }
              }
            }
          }          
        }
      }
    },
    "/silence": {
      "post":{
        "security": [
          {
          "bearerAuth": []
          }
        ],        
        "summary": "Alert - Method to add silence rule and set 'silenced' field of all matched alerts to True",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project": {
                    "type": "string"
                  },
                  "host": {
                    "type": "string"
                  },
                  "alertName": {
                    "type": "string"
                  },
                  "startSilence": {
                    "type": "integer"
                  },
                  "endSilence": {
                    "type": "integer"
                  },
                  "comment": {
                    "type": "string"
                  }                  
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get Token for user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth"
                }
              }
            }
          }          
        }
      }
    },
    "/unsilence" :{
      "post":{
        "security": [
          {
          "bearerAuth": []
          }
        ],        
        "summary": "Alert - Method to remove silence rule(s) and set 'silenced' field of all matched alerts to False",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "string"
                  },
                  "project": {
                    "type": "string"
                  },
                  "host": {
                    "type": "string"
                  },
                   "alertName": {
                    "type": "string"
                  },
                   "startSilence": {
                    "type": "integer"
                  },
                   "endSilence": {
                    "type": "integer"
                  },
                  "comment": {
                    "type": "string"
                  },
                 "author": {
                    "type": "string"
                  }                                                      
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get Token for user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth"
                }
              }
            }
          }          
        }
      }
    },
