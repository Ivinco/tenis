    "/history": {
      "get":{
        "security": [
          {
          "bearerAuth": []
          }
        ],        
        "parameters": [
          {
            "name": "datetime",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "Datetime in epoch format"
          }
        ],
        "responses": {
          "200": {
