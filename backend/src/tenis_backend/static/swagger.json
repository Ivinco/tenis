    "/alerts": {
      "get":{
        "security": [
          {
          "bearerAuth": []
          }
        ],        
        "summary": "Alert - Endpoint to get details for a single alert with its status history",
        "parameters": [
          {
            "name": "alert_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the alert"
          },
          {
            "name": "start",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "Start time in epoch format"
          },
          {
            "name": "end",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "End time in epoch format"
          }
        ],
        "responses": {
          "200": {
            "description": "Get Token for user",
